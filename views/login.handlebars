<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <div class="card card-body" style="margin-top:-60px">
        <h1 class="mt-3 text-center">Login</h1>
        {{> message}}
        <form action="/users/login" method="POST">
          <div class="mb-3">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="請輸入 電子信箱">
          </div>
          <div class="mb-3">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="請輸入 密碼">
          </div>
          <div class="d-grid gap-2">
            <button class="btn btn-info">Login</button>
            <a href="/auth/facebook" class="btn btn-primary">Facebook Login</a>
          </div>
          <p class="mt-4 lead">
            No Account? <a href="/users/register" style="text-decoration: none;">Register</a>
          </p>
        </form>
      </div>
    </div>
  </div>
</div>
