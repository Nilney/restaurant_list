<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <div class="card card-body" style="margin-top:-60px">
        <h1 class="mt-3 text-center">Register</h1>
        <form action="/users/register" method="POST">
          <div class="mb-3">
            <label for="name" class="mb-2">Name</label>
            <input type="text" id="name" name="name" class="form-control" placeholder="請輸入 姓名">
          </div>
          <div class="mb-3">
            <label for="email" class="mb-2 red-spot">Email</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="請輸入 電子信箱">
          </div>
          <div class="mb-3">
            <label for="password" class="mb-2 red-spot">Password</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="請輸入 密碼">
          </div>
          <div class="mb-3">
            <label for="confirmPassword" class="mb-2 red-spot">Confirm Password</label>
            <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" placeholder="請再輸入一次 密碼">
          </div>
          <div class="d-grid gap-2">
            <button class="btn btn-info">Register</button>
          </div>
        </form>
        <p class="mt-4 lead">
          Have An Account? <a href="/users/login" style="text-decoration: none;">Login</a>
        </p>
      </div>
    </div>
  </div>
</div>